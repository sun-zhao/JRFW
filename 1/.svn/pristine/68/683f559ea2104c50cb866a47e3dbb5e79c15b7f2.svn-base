    <style type="text/css">
        /*移动端*/
        body,html{height:100%;position: relative;overflow:hidden;}
        .layout{width:100%;position:absolute;top:65px;bottom:36px;left:0;padding-top:175px;overflow-y:auto;background:#e3d9bf url("images/m_bg.jpg") no-repeat;background-size:100% auto;}
        .m_header{width:100%;position:absolute;left:0;top:0;height:65px;z-index:10;background: url("images/m_header_bg.jpg") repeat-x;background-size:contain;}
        .m_header img{position: relative;top:1px;height:45px;}
        .m_footer{height:35px;background:#000;width:100%;position:absolute;left:0;bottom:0;border-top:1px solid #4c4c4c;z-index:10;}
        .m_footer a{color:#fff;line-height:35px;display: inline-block;padding-left:15px;}
        .m_footer a img{vertical-align: middle;margin:0 5px;}
        .goHome{font-size:13px;color:#000;padding:40px 15px 0 30px;}
        .showIn{width:90%;margin:0 auto;height: 100px;}
        .title{height:22px;line-height:22px;color:#959595;padding:0 10px;position:absolute;bottom:3px;right:17px;left:0;z-index:30;text-align: right;}
        .list{width:49%;}
        .list li{display: block;margin-bottom:3px;position: relative;}
        .list li img{width:100%;}
        .arrow{display:inline-block;position: absolute;width:25px;height:25px;font-size:0;line-height:0;background: url("images/m-lrtb.png") no-repeat 0 0;z-index:10;}
        .l-t{top:0;left: 0;}
        .r-t{top:0;right:0;background-position:-25px 0;}
        .l-bt{bottom:0;left:0;height:26px;background-position:0 bottom;}
        .r-bt{bottom:0;right:0;height:26px;background-position:-25px bottom;}
        .l-side{width:25px;height:auto;top:25px;bottom:26px;left:0;background: url("images/m-l-y.png") repeat-y;}
        .r-side{width:25px;height:auto;top:25px;bottom:26px;right:0;background: url("images/m-r-y.png") repeat-y;}
        .t-side{width:auto;height:29px;top:0;left:25px;right:25px;background: url("images/m-t-x.png") repeat-x;}
        .b-side{width:auto;height:26px;bottom:0;left:25px;right:25px;background: url("images/m-b-x.png") repeat-x;}
        .imgBox .l-t{width:40px;height:38px;top:-10px;left:-15px;background: url("images/m-p-l-t.png");}
        .imgBox .r-t{width:51px;height:38px;top:-10px;right:-20px;background: url("images/m-p-r-t.png");}
        .imgBox .l-bt{width:40px;height:53px;bottom:-25px;left:-15px;background: url("images/m-p-b-l.png");}
        .imgBox .r-bt{width:51px;height:53px;bottom:-25px;right:-20px;background: url("images/m-p-b-r.png");}
        .imgBox .l-side{width:40px;top:28px;bottom:28px;left:-15px;background: url("images/m-p-l-y.png") repeat-y;}
        .imgBox .r-side{width:50px;top:28px;bottom:28px;right:-20px;background: url("images/m-p-r-y.png") repeat-y;}
        .imgBox .t-side{height:38px;background:url("images/m-p-t-x.png") repeat-x;top:-10px;right:31px;}
        .imgBox .b-side{height:53px;background: url("images/m-p-b-x.png") repeat-x;bottom:-25px;right:31px;}

        .imgShow{position:absolute;width:100%;top:65px;bottom:36px;right:-100%;background:#9c8857;transition:0.3s;-webkit-transition:0.3s;overflow-y: auto;z-index: 30;}
        .imgShow.current{right:0;}
        .imgShow .title{padding:3px 15px;height:30px;line-height:30px;position: relative;color:#fff;}
        .imgShow .title img{vertical-align: middle;}
        .imgShow .title span{display:inline-block;height:30px;line-height:30px;}
        .bigImg{padding:0 15px;}
        .imgBox{width: 100%;min-height:100px;background: url("images/022.gif") no-repeat center center;background-size:30px;position: relative;}
        .imgBox img{max-width:98%;}
        .bigImg .color-white{padding:20px 0;}
        .off{display:inline-block;padding:0 50px 0 0;}
    </style>
